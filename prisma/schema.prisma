generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model MediaFile {
  id            Int             @id @default(autoincrement())
  path          String
  type          String
  originalName  String
  size          Int?
  status        String?
  createdAt     DateTime        @default(now())

  thumbnail     String?

  // HLS Streaming
  streamStatus  String?         @default("pending")
  streamPath    String?
  streamFolder  String?

  metadata      MediaMetadata?
}

model User {
  id         Int       @id @default(autoincrement())
  email      String    @unique
  password   String
  name       String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model MediaMetadata {
  id         Int        @id @default(autoincrement())
  mediaId    Int        @unique
  data       Json
  createdAt  DateTime   @default(now())

  media      MediaFile  @relation(fields: [mediaId], references: [id], onDelete: Cascade)
}
