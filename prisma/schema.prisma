generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model MediaFile {
  id        Int      @id @default(autoincrement())
  path      String
  type      String
  size      Int?
  status    String?
  createdAt DateTime @default(now())

  metadata  MediaMetadata?
  thumbnail String?
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MediaMetadata {
  id         Int        @id @default(autoincrement())
  mediaId    Int        @unique
  media      MediaFile  @relation(fields: [mediaId], references: [id])
  data       Json
  createdAt  DateTime   @default(now())
}